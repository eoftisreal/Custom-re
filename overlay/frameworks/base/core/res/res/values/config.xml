<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- List of regexpressions describing the interface (if any) that represent tetherable
         Wifi interfaces.  If the device doesn't want to support tethering over Wifi this
         should be empty.  An example would be "softap.*" -->
    <string-array translatable="false" name="config_tether_wifi_regexs">
        <item>wlan0</item>
    </string-array>

    <!-- Whether the always on display mode is available. -->
    <bool name="config_dozeAlwaysOnDisplayAvailable">false</bool>

    <!-- Power Management: Whether to allow the device to suspend when the screen is off
         due to proximity sensor. -->
    <bool name="config_suspendWhenScreenOffDueToProximity">true</bool>

    <!-- Whether or not to disable the USB permission dialogs. -->
    <bool name="config_disableUsbPermissionDialogs">true</bool>

    <!-- Set to true to add links to Cell Broadcast app from Settings and MMS app. -->
    <bool name="config_cellBroadcastAppLinks">true</bool>

    <!-- Flag specifying whether VoLTE is available on device -->
    <bool name="config_device_volte_available">true</bool>

    <!-- Flag specifying whether VT is available on device -->
    <bool name="config_device_vt_available">true</bool>

    <!-- Flag specifying whether WFC over IMS is available on device -->
    <bool name="config_device_wfc_ims_available">true</bool>

    <!-- Screen brightness limits -->
    <integer name="config_screenBrightnessSettingMinimum">1</integer>
    <integer name="config_screenBrightnessSettingMaximum">255</integer>
    <integer name="config_screenBrightnessDoze">17</integer>

    <!-- Is the device capable of hot swapping an UICC Card -->
    <bool name="config_hotswapCapable">true</bool>

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_enableSmartPixels">true</bool>

    <!-- Whether VoLTE is available for the carrier -->
    <bool name="config_carrier_volte_available">true</bool>

    <!-- Whether VoLTE should be enabled by default -->
    <bool name="config_ims_volte_enabled_by_default">true</bool>

    <!-- Whether the Enhanced 4G LTE toggle is editable -->
    <bool name="config_editable_enhanced_4g_lte">true</bool>

    <!-- Modern UI: Allow full-screen gesture navigation if supported -->
    <bool name="config_swipe_up_gesture_setting_available">true</bool>

    <!-- Modern UI: Enable smooth display dimming transitions -->
    <bool name="config_animateScreenLights">true</bool>

    <!-- Modern UI: Notification LED - disable for modern ambient display approach -->
    <bool name="config_intrusiveNotificationLed">false</bool>

    <!-- Optimize: Use dark mode for battery savings on AMOLED -->
    <integer name="config_defaultNightMode">2</integer>

    <!-- Front flash LED: Enable hardware flash for front camera -->
    <bool name="config_hasFlashLight">true</bool>

    <!-- Front flash LED: Proximity sensor timeout (ms) to disable flash -->
    <integer name="config_flashlightProximityTimeout">300</integer>

    <!-- WiFi: Enable connected MAC address randomization for privacy (Android 12) -->
    <bool name="config_wifi_connected_mac_randomization_supported">true</bool>

    <!-- WiFi: Enable AP MAC randomization for tethering -->
    <bool name="config_wifi_ap_mac_randomization_supported">true</bool>

</resources>
